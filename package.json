{
    "name": "senior-cubing-tracker",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "workspaces": [
        "bin",
        "app",
        "common"
    ],
    "scripts": {
        "dev": "npm run dev -w app",
        "preview": "npm run preview -w app",
        "lint": "npm run lint --workspaces --if-present && npm run lint:css",
        "lint:css": "stylelint \"app/**/*.css\" --fix",
        "tsc": "npm run tsc --workspaces --if-present",
        "build": "npm run lint && npm run tsc && npm run build --workspaces --if-present",
        "process-data": "npm run process-data -w bin"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@stylistic/eslint-plugin": "^4.4.0",
        "@stylistic/eslint-plugin-js": "^2.12.1",
        "@stylistic/stylelint-plugin": "^4.0.0",
        "eslint": "^9.25.0",
        "eslint-plugin-jsdoc": "^50.6.1",
        "globals": "^16.0.0",
        "shx": "^0.4.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-order": "^7.0.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.30.1"
    }
}
